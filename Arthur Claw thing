#include <kipr/botball.h>

//
void lift_claw () {
  mrp(3,500,10000);
  msleep(3000);
    ao();
}
 void inrange{
  create_drive_direct(100,100);
  //ex. value = 60
  if(get_object_center_y(0,0) = 60 ){
  create_drive_direct(0,0);
        }
    }
    
    camera_open();
    
//stop when biggest RED object is at center(botguy)         
        if(get_object_center_x(0,0) = 80){
            create_drive_direct(0,0);
            msleep(3000);
            //get in range for claw
            inrange();
            //raise claw
            raise();
            //grab
            grab();
        }
