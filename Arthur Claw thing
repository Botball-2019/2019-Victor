void close_claw () {
   set_servo_position(1,2000);
}

void drop_top () {
  set_servo_position(1,1700);

}

void change_tower () {
	motor(0,-50);
    motor(1,50);
    msleep (2000);
    motor(0,-2000);
    motor(1,-2000);
    msleep(3000);
    motor(0,50);
    motor(1,-50);
    msleep(2000);
